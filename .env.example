# =========================
# Runtime / Dashboard
# =========================
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8787
DASHBOARD_SECRET=please-change-me
DASHBOARD_USERS=please-change-me
DASHBOARD_PASS_Chris=please-change-me
DASHBOARD_COOKIE_SECURE=false
AUTO_START=true

# =========================
# Chain / RPC
# =========================
EVM_CHAIN=base
EVM_CHAIN_ID=8453
# Alchemy, Infura, or other Base mainnet RPC
EVM_RPC_URL=please-change-me
# Private key for the hot wallet used to quote/execute (0x-prefixed)
EVM_PRIVATE_KEY=please-change-me
# Optional: explicit from address (otherwise derived from EVM_PRIVATE_KEY)
# EVM_FROM_ADDRESS=0xYourAddress

# Throttle RPC calls (requests per second). Worker interval = max(200ms, 1000/RPS)
BASE_RPC_RPS=0.5

# =========================
# Trading params
# =========================
# Target is used for dashboard display only
TARGET_DAILY_RETURN_PCT=10
# Minimum USD profit you want AFTER gas (guard will require min > gas)
MIN_USD_PROFIT=1.00
# Per-quote sizing in USD (bot scales to this in the sell token)
BASE_TRADE_USD=5

# Which routers to ask for quotes; 'baseswap' is correct on Base
ONCHAIN_ROUTERS=baseswap

# Gas unit estimates (used by profit guard)
GAS_ESTIMATE_UNIV3=300000
GAS_ESTIMATE_UNIV2=220000
# Optional fixed gas price in wei (otherwise guard assumes 0.1 gwei on Base)
# FIXED_GAS_PRICE_WEI=0

# =========================
# Pair scanning
# =========================
# Prefer loading a large list from JSON (generated by scripts/generatePairs.js)
EVM_PAIRS_FILE=./pairs.base.json
# Fallback comma list if file is absent (addresses or symbols)
# EVM_PAIRS=WETH/USDC,USDC/DAI

# Always exclude these pairs (both directions)
EVM_PAIR_EXCLUDE=WETH/USDC,USDC/WETH

# If you know the factory deploy block for BaseSwap you can speed up discovery:
# FACTORY_START_BLOCK=

# =========================
# Dex / Uniswap v3 (for spot/oracles)
# =========================
UNI_V3_FACTORY=0x33128a8fC17869897dcE68Ed026d694621f6FDfD
UNI_V3_QUOTER=0x3d4e44Eb1374240CE5F1B871ab261CD16335B76a
UNI_V3_ROUTER=0x2626664c2603336E57B271c5C0b26F421741e481
UNI_V3_POOL_FEE=500
UNI_V3_FEE_LIST=500,3000,10000

# =========================
# Tokens (Base)
# =========================
WETH_ADDRESS=0x4200000000000000000000000000000000000006
USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# =========================
# Oracle fallback
# =========================
# Used only if onchain oracles fail
FALLBACK_ETH_USD=3200
