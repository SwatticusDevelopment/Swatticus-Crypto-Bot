# ===== Trading params (safe defaults)
BASE_TRADE_USD=10
DEFAULT_SLIPPAGE_BPS=75        # 0.75% to reduce reverts
MIN_PROFIT_USD=6               # skip dust wins
PROFIT_GUARD_DISABLED=false    # keep guard ON
TX_DEADLINE_SEC=180
INTERVAL_MS=900                # don’t starve RPC / misses
GAS_ESTIMATE_UNIV3=300000
GAS_ESTIMATE_UNIV2=220000

# ===== Pair scanning
EVM_PAIRS_FILE=./pairs.base.json
EVM_PAIR_EXCLUDE=WETH/USDC,USDC/WETH

# ===== Rebalancing
REBALANCE_ENABLE=true
REBALANCE_EVERY_SEC=300       # 5 minutes
REBALANCE_MIN_USD=100          # don’t churn pennies
REBALANCE_INCLUDE_STABLES=false
